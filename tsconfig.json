{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": { "@/*": ["src/*"] },
		"target": "ES2022",
		"lib": ["ES2022", "DOM"],
		"module": "ESNext",
		"jsx": "preserve",
		"moduleResolution": "Bundler",
		"strict": true,
		"noEmit": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["next-env.d.ts", "src/**/*.ts", "src/**/*.tsx", "scripts/**/*.ts", ".next/types/**/*.ts"],
	"exclude": ["node_modules"]
}
